		header
			include ../common/navbar.pug
			+navbar()
			.container
				.row
					.col-sm-12.offset-md-2.col-md-8
						.jumbotron
							h2.text-center Log in
							.row
								.col-sm-12.col-md-12
									form(action="/login", method="post")
										.formgroup
											label.small.mb-1.mt-3 Email:
											input(placeholder="Please enter your email", required="true", name="email", type="email", value="").form-control
											label.small.mb-1.mt-3 Passowrd:
											input(palceholder="Enter your current Password", required="true", type="password", name="password", value="").form-control
											button.mt-3.btn.btn-primary(type="submit") Log in
											p.mt-2.mb-0
												| Forgot your password? #[a(href="#") Reset here].
											p.m-0
												| Don't have an account? #[a(href="/signup") Sign up here].
		include ../common/footer.pug
		+footer()